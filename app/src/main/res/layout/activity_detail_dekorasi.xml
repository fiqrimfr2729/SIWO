<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Dekorasi.DetailDekorasiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama : "/>

        <TextView
            android:id="@+id/tvNamaDekorasiDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga : "/>

        <TextView
            android:id="@+id/tvHargaDekorasiDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi : "/>

        <TextView
            android:id="@+id/tvDeskripsiDekorasiDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgDekorasiDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>